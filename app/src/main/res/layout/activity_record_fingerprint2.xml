<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RecordFingerprintActivity"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/head"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fingerprint_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/default_fingerprint"/>

        <TextView
            android:id="@+id/fingerprint_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="请录入指纹"
            android:textSize="16sp"
            android:textColor="@color/black_3"/>

        <Button
            android:id="@+id/finger_back_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/click_bt_press"
            android:layout_marginTop="65dp"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone"
            android:paddingBottom="11dp"/>

    </LinearLayout>

</LinearLayout>