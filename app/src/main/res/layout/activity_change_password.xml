<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChangePasswordActivity"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/head"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/old_psd"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/oldPwd_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="12sp"
                android:digits="@string/fifter_code"
                android:layout_marginStart="50dp"
                android:hint="@string/please_input_old_psd" />
        </LinearLayout>

        <View
            style="@style/line"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_psd"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/newPwd_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="12sp"
                android:digits="@string/fifter_code"
                android:layout_marginStart="50dp"
                android:hint="@string/please_input_new_psd" />
        </LinearLayout>

        <View
            style="@style/line"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm_psd"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/sure_newPwd_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:digits="@string/fifter_code"
                android:background="@null"
                android:layout_marginStart="36dp"
                android:hint="@string/please_confirm_psd" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>