<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/corners_bg"
        android:orientation="vertical">

        <LinearLayout style="@style/details">

            <TextView
                style="@style/details_text"
                android:text="@string/serial_number" />

            <View style="@style/detail_view"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/serial_number_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:enabled="true"
                android:focusable="true"
                android:longClickable="true"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout style="@style/details">

            <TextView
                style="@style/details_text"
                android:text="@string/sealTime" />

            <View style="@style/detail_view"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/sealTime_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/details"
            android:layout_marginBottom="15dp">

            <TextView
                style="@style/details_text"
                android:text="@string/seal_address"
                android:layout_gravity="center_vertical"/>

            <View
                style="@style/detail_view"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/seal_address_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:paddingEnd="20dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="right"
        android:src="@drawable/ffgz" />

</FrameLayout>
