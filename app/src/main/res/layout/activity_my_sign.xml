<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/head" />

    <LinearLayout
        android:id="@+id/sign_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/sign_iv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:background="@drawable/corners_bg"/>

        <LinearLayout
            android:id="@+id/delete_write_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center">

            <TextView
                android:id="@+id/delete_tv"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/red_border"
                android:gravity="center"
                android:textColor="@color/lightCoral"
                android:layout_marginEnd="40dp"
                android:text="@string/delete" />

            <TextView
                android:id="@+id/rewrite_tv"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/login_circle_bg"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/rewrite" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_sign_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/autograph_null"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/add_autograph_tv"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/login_circle_bg"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:text="@string/add_autograph" />
    </LinearLayout>

</LinearLayout>