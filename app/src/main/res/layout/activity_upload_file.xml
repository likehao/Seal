<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".activity.UploadFileActivity">

    <include layout="@layout/head" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/upload_photo"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/add_img" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/upload_photo_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/style"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/useSealApply_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/icon_camera" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="上传拍照图片"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="已上传的照片"
        android:textSize="12sp"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/useSealApply_Rcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            android:paddingTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/subtractx"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@drawable/icon_tailpage"
            android:gravity="center"
            android:src="@drawable/icon_tailpage" />

        <TextView
            android:id="@+id/subtract"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/icon_left"
            android:gravity="center"
            android:src="@drawable/icon_left" />

        <TextView
            android:id="@+id/page"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:src="@drawable/add_img"
            android:text="1页"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/add"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/icon_right"
            android:gravity="center"
            android:src="@drawable/icon_right" />

        <TextView
            android:id="@+id/addx"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/icon_homepage"
            android:gravity="center"
            android:src="@drawable/icon_homepage" />

    </LinearLayout>


</LinearLayout>