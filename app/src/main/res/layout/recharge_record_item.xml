<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/corners_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/recharge_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:text="2019-02-21 14:00:00"
                android:textSize="15sp"
                android:textColor="@color/black_3" />

            <TextView
                android:id="@+id/recharge_result_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:text="充值成功"
                android:textSize="15sp"
                android:textColor="@color/black_3" />

        </RelativeLayout>

        <View style="@style/line"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/seal_name"
                android:textSize="13sp"
                android:textColor="@color/black_3" />

            <TextView
                android:id="@+id/recharge_seal_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="研发章"
                android:textSize="13sp"
                android:textColor="@color/black_6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/department"
                android:textSize="13sp"
                android:textColor="@color/black_3"/>

            <TextView
                android:id="@+id/recharge_department_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="研发部"
                android:textSize="13sp"
                android:textColor="@color/black_6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/set_meal"
                android:textSize="13sp"
                android:textColor="@color/black_3" />

            <TextView
                android:id="@+id/recharge_set_meal_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="包月"
                android:textSize="13sp"
                android:textColor="@color/black_6"  />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/recharge_way"
                android:textSize="13sp"
                android:textColor="@color/black_3" />

            <TextView
                android:id="@+id/recharge_way_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:textSize="13sp"
                android:textColor="@color/black_6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/service_fee_time"
                android:textSize="13sp"
                android:textColor="@color/black_3" />

            <TextView
                android:id="@+id/recharge_end_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-01-01 00:00:00"
                android:textSize="13sp"
                android:textColor="@color/black_6"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="@drawable/corners_left_right_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_toLeftOf="@+id/recharge_money_tv"
                android:text="@string/pay_money"
                android:textSize="13sp"
                android:textColor="@color/black_3" />

            <TextView
                android:id="@+id/recharge_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:text="240.00"
                android:textSize="13sp"
                android:textColor="@color/black_3"/>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
