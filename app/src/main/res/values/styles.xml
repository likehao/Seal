<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--账号选择下拉箭头-->
    <style name="checkboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/down_up_arrow</item>
    </style>

    <!--    &lt;!&ndash;小圆圈消息数&ndash;&gt;
        <style name="message_num">
            <item name="android:layout_width">15dp</item>
            <item name="android:layout_height">15dp</item>
            <item name="android:background">@drawable/message_circle</item>
            <item name="android:text">10</item>
            <item name="android:layout_gravity">center</item>
            <item name="android:gravity">center</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:textSize">10sp</item>
        </style>-->

    <!--灰色细线条-->
    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/line</item>
    </style>

    <style name="line_left" parent="line">
        <item name="android:layout_marginStart">15dp</item>
    </style>
    <!--right箭头-->
    <style name="right_arrow">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:background">@drawable/right_arrow</item>
    </style>

    <!--圆形图-->
    <style name="cycleApplication">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--应用圆形图下文字-->
    <style name="application_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/Light_black</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!--补充-->
    <style name="add">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--长按时间显示的popuwindow-->
    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>
    <!--我的fragment的布局按压效果-->
    <style name="pressed_effect">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/click</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <!--消息fragment的布局按压效果-->
    <style name="message_pressed_effect">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/click</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <!--详情布局-->
    <style name="details">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="details_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="detail_view">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/LightGrey</item>
    </style>

    <!--设置权限布局-->
    <style name="set_power_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="set_power">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="set_power_bt" parent="set_power">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="set_power_tv" parent="set_power">
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--加载圈-->
    <style name="Theme_Transparent" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
